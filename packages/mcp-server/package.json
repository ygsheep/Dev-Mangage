{
  "name": "@devapi/mcp-server",
  "version": "2.0.0",
  "description": "DevAPI Manager MCP Search Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/startHttpServer.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/startHttpServer.js",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@devapi/database": "file:../database",
    "@devapi/shared": "file:../shared",
    "@huggingface/transformers": "^3.7.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@prisma/client": "^6.14.0",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "faiss-node": "^0.5.1",
    "fuse.js": "^7.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.9.0",
    "prisma": "^5.6.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}
